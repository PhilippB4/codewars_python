def encrypt_this(text):
    rtrn = []
    
    # Durch jedes Wort im Text gehen
    for word in text.split():
        # Aus dem Wort eine Liste machen
        word = list(word)
        # Den ersten Buchstaben des Worts in seinen ASCII-Code-Wert umwandeln
        word[0] = str(ord(word[0]))
        
        # Wenn das Wort l채nger als zwei Buchstaben ist, den zweiten und den letzten Buchstaben vertauschen
        if len(word) > 2:
            word[1], word[-1] = word[-1], word[1]
        
        # Das Wort wieder zusammenf체gen
        rtrn.append(''.join(word))
    
    # Den Text wieder zusammenf체gen und zur체ckgeben
    return ' '.join(rtrn)
